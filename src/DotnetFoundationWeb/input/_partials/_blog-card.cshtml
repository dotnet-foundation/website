@inherits Statiq.Razor.StatiqRazorPage<IEnumerable<IDocument>>

@foreach (IDocument item in Model)
{
    @if (!String.IsNullOrEmpty(item.GetString("title")))
    {
        <div class="latest_container latest_container--news">
            <div class="latest_date d-flex align-items-center justify-content-center text-center newstype-community">
                <span>.NET Foundation Blog</span>
            </div>
            <div class="latest_meta d-flex flex-column justify-content-center">
                <h3 class="latest_title"><a href="@Context.GetLink(item).Substring(1)" 
                                            title="@item.GetString("title")">@item.GetString("title")</a></h3>
                <p class="latest_copy">
                    @Html.Raw(DotnetFoundationWeb.Utils.StringUtils.TruncateHtml((await item.GetContentStringAsync()).ToString(), 150))
                </p>
            </div>
        </div>
    }
}
